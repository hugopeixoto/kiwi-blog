<!DOCTYPE html>
<html>
  <body>
    <% Post* post = params.get<Post*>("post"); %>
    <% if (post == NULL) { %>
      <h1>404 Page not found</h1>
    <% } else { %>
      <h1><%= post->get("name") %></h1>

      <p><%= post->get("body") %></p>
    <% } %>

    <p><%= kiwi::helpers::link_to("back", "/") %></p>
    <p><%= kiwi::helpers::link_to("edit", kiwi::helpers::path(post) + "/edit") %></p>
  </body>
</html>
