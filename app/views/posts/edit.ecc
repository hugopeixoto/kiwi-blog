<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
  </head>
  <body>
    <% auto post = params.get<Post*>("post"); %>
    <h1>Editing post <%= post->get("name") %></h1>

    <%= form_for(post, [&](FormBuilder& f) { %>
      <p><%= f.input("name") %></p>
      <p><%= f.textarea("body") %></p>
    <% }); %>

  </body>
</html>
